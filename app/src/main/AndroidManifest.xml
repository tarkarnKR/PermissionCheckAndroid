<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tarkarn.permissiontest">


    <!-- Dangerous Permission -->
        <!-- CALENDAR -->
        <uses-permission android:name="android.permission.READ_CALENDAR" />
        <uses-permission android:name="android.permission.WRITE_CALENDAR" />

        <!-- CAMERA -->
        <uses-permission android:name="android.permission.CAMERA" />

        <!-- CONTACT -->
        <uses-permission android:name="android.permission.READ_CONTACTS" />
        <uses-permission android:name="android.permission.WRITE_CONTACTS" />
        <uses-permission android:name="android.permission.GET_ACCOUNTS" />

        <!-- LOCATION -->
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

        <!-- MICROPHONE -->
        <uses-permission android:name="android.permission.RECORD_AUDIO" />

        <!-- PHONE -->
        <uses-permission android:name="android.permission.READ_PHONE_STATE" />
        <uses-permission android:name="android.permission.CALL_PHONE" />
        <uses-permission android:name="android.permission.READ_CALL_LOG" />
        <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
        <uses-permission android:name="android.permission.ADD_VOICEMAIL" />
        <uses-permission android:name="android.permission.USE_SIP" />
        <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />

        <!-- SENSORS -->
        <uses-permission android:name="android.permission.BODY_SENSORS" />

        <!-- SMS -->
        <uses-permission android:name="android.permission.SEND_SMS" />
        <uses-permission android:name="android.permission.RECEIVE_SMS" />
        <uses-permission android:name="android.permission.READ_SMS" />
        <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
        <uses-permission android:name="android.permission.RECEIVE_MMS" />

        <!-- STORAGE -->
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Dangerous Permission End -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tarkarn.main.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CalendarPermissionActivity"></activity>
        <activity android:name=".CameraPermissionActivity"></activity>
        <activity android:name=".ContactPermissionActivity"></activity>
        <activity android:name=".LocationPermissionActivity"></activity>
        <activity android:name=".MicrophonePermissionActivity"></activity>
        <activity android:name=".PhonePermissionActivity"></activity>
        <activity android:name=".SmsPermissionActivity"></activity>
        <activity android:name=".StoragePermissionActivity"></activity>

    </application>

</manifest>
